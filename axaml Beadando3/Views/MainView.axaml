<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Beadando3.ViewModels"
             xmlns:views="clr-namespace:Beadando3.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Beadando3.Views.MainView"
             x:DataType="vm:LabirintusViewModel">

  <!-- Design idejű nézet -->
  <Design.DataContext>
    <vm:LabirintusViewModel />
  </Design.DataContext>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- 1. Menü -->
    <Menu Grid.Row="0">
      <MenuItem Header="Labyrinths">
        <MenuItem Header="Labyrinth 1" Command="{Binding LoadLab1Command}"/>
        <MenuItem Header="Labyrinth 2" Command="{Binding LoadLab2Command}"/>
        <MenuItem Header="Labyrinth 3" Command="{Binding LoadLab3Command}"/>
      </MenuItem>
    </Menu>

    <!-- 2. Játéktér -->
    <views:GameCanvas x:Name="GameCanvasControl" 
                      Grid.Row="1"/>

    <!-- 3. Alsó sáv -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
      <Button Content="{Binding PauseButtonText}"
              Command="{Binding PauseCommand}"
              Width="120" Height="35" Margin="5"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"/>
      
      <TextBlock Text="{Binding ElapsedTimeText}"
                 VerticalAlignment="Center"
                 Margin="20,0,0,0"
                 FontWeight="Bold"/>
                 
      <TextBlock Text="(Controls: Arrows)" 
                 VerticalAlignment="Center" 
                 Margin="10,0,0,0" 
                 Opacity="0.5" 
                 FontStyle="Italic"
                 x:Name="KeyboardHintText"
                 Name="KeyboardHintText"
                 IsVisible="{OnPlatform Android=False, Default=True}"/>
    </StackPanel>

    <!-- 4. Mobil Control Sáv (csak Androidon látható) -->
    <Border Grid.Row="3" 
            x:Name="MobileControlBar"
            Name="MobileControlBar"
            Background="#222222"
            Padding="20"
            IsVisible="{OnPlatform Android=True, Default=False}">
      <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
          <RowDefinition Height="60"/>
          <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="60"/>
          <ColumnDefinition Width="60"/>
          <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <!-- Fel nyíl -->
        <Button Grid.Row="0" Grid.Column="1"
                Content="▲"
                FontSize="24"
                Click="OnUpButtonClick"
                Width="55" Height="55"
                Margin="2"
                Background="#444444"
                Foreground="White"/>

        <!-- Bal nyíl -->
        <Button Grid.Row="1" Grid.Column="0"
                Content="◀"
                FontSize="24"
                Click="OnLeftButtonClick"
                Width="55" Height="55"
                Margin="2"
                Background="#444444"
                Foreground="White"/>

        <!-- Le nyíl -->
        <Button Grid.Row="1" Grid.Column="1"
                Content="▼"
                FontSize="24"
                Click="OnDownButtonClick"
                Width="55" Height="55"
                Margin="2"
                Background="#444444"
                Foreground="White"/>

        <!-- Jobb nyíl -->
        <Button Grid.Row="1" Grid.Column="2"
                Content="▶"
                FontSize="24"
                Click="OnRightButtonClick"
                Width="55" Height="55"
                Margin="2"
                Background="#444444"
                Foreground="White"/>
      </Grid>
    </Border>

    <!-- 5. Game Over Overlay -->
    <Grid Grid.Row="0" Grid.RowSpan="4"
          IsVisible="False"
          Name="GameOverOverlay"
          Background="#AA000000">
      <Border Background="Blue"
              BorderBrush="Black"
              BorderThickness="2"
              CornerRadius="10"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Padding="30">
        <StackPanel Spacing="15">
          <TextBlock Name="GameOverMessage" 
                     Text="Congratulations!" 
                     HorizontalAlignment="Center" Foreground="Red"/>
          <Button Content="OK" 
                  HorizontalAlignment="Center" 
                  Width="80"
                  Background="Red"
                  Click="CloseOverlay_Click"/>
        </StackPanel>
      </Border>
    </Grid>

  </Grid>
</UserControl>